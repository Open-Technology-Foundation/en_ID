LC_TIME
% Abbreviated weekday names (%a)
abday       "Sun";"Mon";"Tue";"Wed";"Thu";"Fri";"Sat"
%
% Full weekday names (%A)
day         "Sunday";"Monday";"Tuesday";"Wednesday";/
            "Thursday";"Friday";"Saturday"
%
% Abbreviated month names (%b)
abmon       "Jan";"Feb";"Mar";"Apr";"May";"Jun";/
            "Jul";"Aug";"Sep";"Oct";"Nov";"Dec"
%
% Full month names (%B)
mon         "January";"February";"March";"April";/
            "May";"June";"July";"August";/
            "September";"October";"November";"December"
%
% Equivalent of AM PM
% 12-hour format available for applications that require it
am_pm       "AM";"PM"
%
% Appropriate 12 h time representation (%r)
% 24-hour format is preferred for business; 12-hour available via %r
t_fmt_ampm  "%I:%M:%S %p"
%
% Appropriate date and time representation
% ISO 8601 date with weekday prefix: Fri 2024-12-13 14:30:45
d_t_fmt     "%a %Y-%m-%d %T"
%
% Date format for date(1) command
date_fmt    "%a %Y-%m-%d %T %Z"
%
% Appropriate date representation
% %Y-%m-%d (ISO 8601)
d_fmt       "%Y-%m-%d"
%
% Appropriate time representation
% %T
t_fmt       "%T"
%
%
% ISO 8601: weeks start Monday, week 1 contains first Thursday
week 7;19971130;4
first_weekday 2
END LC_TIME

