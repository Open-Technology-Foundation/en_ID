LC_TIME
% Abbreviated weekday names (%a)
abday       "Sun";"Mon";"Tue";"Wed";"Thu";"Fri";"Sat"
%
% Full weekday names (%A)
day         "Sunday";"Monday";"Tuesday";"Wednesday";/
            "Thursday";"Friday";"Saturday"
%
% Abbreviated month names (%b)
abmon       "Jan";"Feb";"Mar";"Apr";"May";"Jun";/
            "Jul";"Aug";"Sep";"Oct";"Nov";"Dec"
%
% Full month names (%B)
mon         "January";"February";"March";"April";/
            "May";"June";"July";"August";/
            "September";"October";"November";"December"
%
% Equivalent of AM PM
am_pm       "";""
% Appropriate 12 h time representation (%r)
% Not used - 24 hour format is standard
t_fmt_ampm  "%H:%M:%S"
%
% Appropriate date and time representation
% %a %d %b %Y %T
d_t_fmt     "%a %d %b %Y %T"
%
% Appropriate date representation
% %Y-%m-%d (ISO 8601)
d_fmt       "%Y-%m-%d"
%
% Appropriate time representation
% %T
t_fmt       "%T"
%
%
%  FIXME: found in CLDR
first_weekday 2
END LC_TIME

LC_MESSAGES
copy "en_SG"
END LC_MESSAGES

LC_PAPER
height      297
width       210
END LC_PAPER

% LC_NAME category intentionally omitted
% Indonesian naming conventions don't map to Western name formatting:
% - Single names are common (e.g., Sukarno, Suharto, Junarti)
% - Names derive from Javanese, Balinese, Chinese, Arabic traditions
% - Titles like Pak/Bu are Indonesian, not English
% - In English contexts, Mr./Ms. are typically used
% Rather than misrepresent Indonesian names, LC_NAME is left undefined

LC_NAME
name_fmt    "%d%t%g%t%m%t%f"
END LC_NAME

LC_ADDRESS
postal_fmt  "%z%c%T%s%b%e%r"
country_ab2   "ID"
country_ab3   "IDN"
country_num   360
END LC_ADDRESS

LC_TELEPHONE
tel_int_fmt "+%c ;%a ;%l"
END LC_TELEPHONE

LC_MEASUREMENT
measurement 1
END LC_MEASUREMENT
